<div class="super-padding">
  <div class="container">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="box-form">
        <h2><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h2>

        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
          <%= devise_error_messages! %>

          <div><%= f.label :email %><br/>
          <%= f.email_field :email %></div><br/>

          <div><%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "submit-btn" %></div>
        <% end %>
      </div>
      <div class="form-footer">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
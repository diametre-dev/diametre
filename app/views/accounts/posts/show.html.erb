        <%#= render 'posts/post_pictures_fields', f: picture %>
      <%# end %>
      <div class="links">
        <%#= link_to_add_association 'Ajouter une photo', f, :post_pictures, partial: 'accounts/posts/post_pictures_fields' %>
      </div> -->
    </div>
  </div>
</div>

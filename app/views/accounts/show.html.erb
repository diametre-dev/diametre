
<!-- RIGHT CONTENT BEGINS -->
<div class="form-wrapper inactive" id="layer1">
  <div class="post-form">
    <%= render 'posts/form' %>
  </div>
</div>

<div class="form-wrapper active" id="layer2">
  <% @posts.each do |post| %>
    <div class="mini-card">
      <div class="inside-card">
        <%= link_to account_post_path(post) do %>
          <h3><%= post.title %></h3>
          <p><%= post.subtitle %></p>
          <% if post.picture? %>
            <%= image_tag post.picture.url(:thumb), class: "avatar"%>
          <% end %>
        <% end %>
        <div class="trash text-center">
          <%= link_to account_post_path(post), method: :delete, data: {confirm: "Are you sure?"} do %>
            <i class="fa fa-times"></i>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
    <div class="new-card">
    <a href=""><div class="new-inside-card">
      <i class="plus-icon"></i>
    </div></a>
  </div>
</div>

<div class="form-wrapper inactive" id="layer3">
  <div class="post-form">
    <%= render 'locations/form' %>
  </div>
</div>

<div class="form-wrapper inactive" id="layer4">
  <h2 style="text-align: center">Vos lieux</h2>
  <% @locations.each do |location| %>
    <div style="position: relative; width: 90%; margin-left: auto; margin-right: auto; width: 30%; margin-bottom: 10px; border-style: solid; border-size: 2.5px; border-radius: 2.5px; border-color: #2A316D; font-size: 18px">
      <p style="color: #2A316D; position: relative; margin-top: 10px; margin-bottom: 10px; margin-left: 10px">
        <%= location.name %> - <%= link_to account_location_path(location), method: :delete do %>
          <i class="fa fa-times"></i>
        <% end %>
      </p>
    </div>
  <% end %>
</div>

<!-- RIGHT CONTENT ENDS -->

<!-- LEFT CONTENT BEGINS -->
<div class="content-left">
  <h2>Bonjour <%= current_user.name %></h2>
  <br>
  <ul>
    <li><a href="#1" id="handler2">Voir mes publications</a></li>
    <li><a href="#2" id="handler1">Créer une nouvelle publication</a></li>
    <li><a href="#3" id="handler4">Voir les lieux</a></li>
    <li><a href="#4" id="handler3">Créer un lieu</a></li>
  </ul>
</div>
<!-- LEFT CONTENT ENDS -->
<div class="form-wrapper active" id="layer1">
  <div class="post-form">
    <%= render 'posts/form' %>
  </div>
</div>

<div class="form-wrapper inactive" id="layer2">
  <div class="post-form">
      <% @posts.each do |post| %>
    <!--<div class="card">-->
        <div class="mini-card">
          <div class="inside-card">
            <%= link_to account_post_path(post) do %>
              <h3><%= post.title %></h3>
              <p><%= post.subtitle %></p>
              <%= image_tag post.picture.url(:thumb), class: "avatar"%>
            <% end %>
          </div>
        </div>
        <% end %>
      <!--</div>-->
  </div>
</div>

<div class="form-wrapper inactive" id="layer3">
  <div class="post-form">
    <%= render 'locations/form' %>
  </div>
</div>

<div class="form-wrapper inactive" id="layer4">
  <% @locations.each do |location| %>
    <%= location.name %> - <%= link_to account_location_path(location), method: :delete do %>
      <i class="fa fa-trash-o"></i>
    <% end %>
  <% end %>
</div>

<div class="form-wrapper inactive" id="layer5">

</div>


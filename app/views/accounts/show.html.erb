
<!-- RIGHT CONTENT BEGINS -->
<div class="form-wrapper active" id="layer1">
  <div class="post-form">
    <%= render 'posts/form' %>
  </div>
</div>

<div class="form-wrapper inactive" id="layer2">
      <% @posts.each do |post| %>
        <div class="mini-card">
          <div class="inside-card">
          <h3><%= post.title %></h3>
          <p><%= post.subtitle %></p>
          <%= image_tag post.picture.url(:thumb), class: "avatar"%>
          </div>
        </div>
        <% end %>
</div>

<div class="form-wrapper inactive" id="layer3">
  <div class="post-form">
    <%= render 'locations/form' %>
  </div>
</div>

<div class="form-wrapper inactive" id="layer4">
  <h2 style="text-align: center">Vos lieux</h2>
    <div class="box-form" id="big-form">
  <% @locations.each do |location| %>
      <h3>
        <%= location.name %> - <%= link_to account_location_path(location), method: :delete do %>
          <i class="fa fa-trash-o"></i>
        <% end %>
      </h3>
  <% end %>
    </div>
</div>

<!-- RIGHT CONTENT ENDS -->


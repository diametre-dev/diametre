<div class="content">
  <% @posts.each do |post| %>
  <div class="back-article">
    <div class="article">
      <h1><%= post.title %></h1>
      <h3><%= post.subtitle %></h3>
      <% if post.picture? %>
        <%= image_tag post.picture.url(:medium) %>
      <% end %>
      <p><%= post.description %></p>
    </div>
  </div>
  <% end %>
</div>